<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFileLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_voice_file" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableRight="@mipmap/ic_file_play"
                android:gravity="center_vertical"
                android:text="抢回街头"
                android:textColor="@color/black_66"
                android:textSize="16sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长："
                    android:textColor="@color/gray_a5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvFileTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2：23"
                    android:textColor="@color/gray_a5"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="大小："
                    android:textColor="@color/gray_a5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2M"
                    android:textColor="@color/gray_a5"
                    android:textSize="12sp" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tvChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_shape_black_43_button_background"
            android:gravity="center"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/skAudio"
        style="@style/my_seekbar_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxHeight="4dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:thumbOffset="0dp" />

</android.support.v7.widget.LinearLayoutCompat>
