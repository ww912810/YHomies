<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_43"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.ui.activity.LoginActivity">

    <include layout="@layout/app_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="+86（中国）"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_73"
        android:textSize="16sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/gray_73" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="四位"
            android:textColor="@color/gray_73"
            android:textSize="16sp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etVCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_73"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGetVCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/gray_73" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/ic_shape25_red_ff4646_button_background"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="密码登陆"
        android:textColor="@color/white"
        android:textSize="14sp" />

</android.support.v7.widget.LinearLayoutCompat>