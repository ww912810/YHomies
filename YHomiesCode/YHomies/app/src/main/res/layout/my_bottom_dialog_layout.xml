<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_round_gray_e5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvImgAndVideo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="图/视频"
            android:textColor="@color/black_3f"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#616170" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:gravity="center"
            android:text="文字"
            android:textColor="@color/black_3f"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#616170" />

        <TextView
            android:id="@+id/tvRecording"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:gravity="center"
            android:text="录音"
            android:textColor="@color/black_3f"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#616170" />

        <TextView
            android:id="@+id/tvVoiceFile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:gravity="center"
            android:text="音频文件"
            android:textColor="@color/black_3f"
            android:textSize="16sp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_dialog_right_white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue_007aff"
        android:textSize="16sp" />


</android.support.v7.widget.LinearLayoutCompat>
