<resources>


    <!-- 去掉tab顶部的黑边 -->
    <style name="no_title" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 沉浸式状态栏 -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="no_title.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="no_title.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 防止欢迎页白屏或者黑屏，设置图片 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/start_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>

    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressDrawable">@drawable/progress_bar_background</item>
    </style>

</resources>
