<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dbh.yhomies">

    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/no_title">
        <meta-data
            android:name="com.example.dbh.yhomies.utils.glide.GlideConfiguration"
            android:value="GlideModule" />

        <activity
            android:name=".view.ui.activity.StartActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.MainActivity" />
        <activity android:name=".view.ui.activity.WelcomeActivity" />
        <activity android:name=".view.ui.fragment.HomeFragment" />
        <activity android:name=".view.ui.fragment.SquareFragment" />
        <activity android:name=".view.ui.fragment.FindFragment" />
        <activity android:name=".view.ui.fragment.MyFragment" />
        <activity android:name=".view.ui.fragment.HomeChildFragment" />
        <activity android:name=".view.ui.activity.SettingActivity" />
        <activity android:name=".view.ui.activity.AboutActivity" />
        <activity android:name=".view.ui.activity.MoreNearbyActivity" />
        <activity android:name=".view.ui.activity.MorePopularityActivity" />
        <activity android:name=".view.ui.activity.LoginAndRegisteredActivity" />
        <activity android:name=".view.ui.activity.LoginActivity" />
        <activity android:name=".view.ui.activity.LoginForPasswordActivity"></activity>
    </application>

</manifest>